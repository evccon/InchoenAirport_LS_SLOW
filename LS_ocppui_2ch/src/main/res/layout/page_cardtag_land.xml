<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="463dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/texttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/noto_med"
                android:text="RF카드"
                android:textColor="#00ffa5"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/constat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/texttitle"
                android:fontFamily="@font/noto_med"
                android:text="를 RFID 리더기에 접촉하세요"
                android:textColor="#ffffff"
                android:textSize="50sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="450dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/guide_land"
                android:gravity="bottom|start">

                <TextView
                    android:id="@+id/tvcounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:includeFontPadding="false"
                    android:text="유효시간: 00초"
                    android:textColor="#666666"
                    android:textSize="26sp" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>