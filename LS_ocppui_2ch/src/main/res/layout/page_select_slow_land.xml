<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/texttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/noto_med"
                android:text="플러그"
                android:textColor="#00ffa5"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/constat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/texttitle"
                android:fontFamily="@font/noto_med"
                android:text="를 선택해 주세요"
                android:textColor="#ffffff"
                android:textSize="50sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/leftlayout"
                    android:layout_width="289dp"
                    android:layout_height="453dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/bg_available"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btleftguide"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00000000" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="75dp"
                        android:fontFamily="@font/noto_med"
                        android:text="플러그1"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView26"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/noto_med"
                        android:text="C-Type"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />

                    <RelativeLayout
                        android:id="@+id/leftlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/lefttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/noto_med"
                            android:text="충전 가능"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                            android:translationZ="1dp" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btbtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bt_choice_land_sel"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/imgleftcharge"
                        android:layout_width="162dp"
                        android:layout_height="185dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="180dp"
                        android:background="@drawable/icon_ctype"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rightlayout"
                    android:layout_width="289dp"
                    android:layout_height="453dp"
                    android:background="@drawable/bg_available"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btrightguide"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00000000" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="75dp"
                        android:fontFamily="@font/noto_med"
                        android:text="플러그2"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView29"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/noto_med"
                        android:text="C-Type"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />

                    <RelativeLayout
                        android:id="@+id/rightlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/righttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/noto_med"
                            android:text="충전 가능"
                            android:textColor="#ffffff"
                            android:textSize="25sp"
                            android:translationZ="1dp" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btctype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bt_choice_land_sel" />

                    <ImageView
                        android:id="@+id/imgrightcharge"
                        android:layout_width="162dp"
                        android:layout_height="185dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="180dp"
                        android:background="@drawable/icon_ctype"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>