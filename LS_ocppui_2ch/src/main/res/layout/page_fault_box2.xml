<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b9000000"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/alarmframe"
            android:layout_width="900dp"
            android:layout_height="520dp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popupbackground"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAlarmicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/imgerror" />

            <TextView
                android:id="@+id/tvAmp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/noto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="오 류"
                android:textColor="#ff6666"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvFaultBoxContent"
                android:layout_width="850dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="msg"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_med"
                android:gravity="center"
                android:text="해당 오류로 충전을 진행 할 수 없습니다.\n사업소 또는 제조사로 문의바랍니다."
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <LinearLayout
                android:id="@+id/linearlayoutbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btok"
                    android:layout_width="279dp"
                    android:layout_height="94.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bt_cert_sel"
                    android:clickable="false" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.widget.RelativeLayout>