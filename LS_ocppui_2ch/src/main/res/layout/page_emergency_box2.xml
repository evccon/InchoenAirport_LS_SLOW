<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b9000000"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/alarmframe"
            android:layout_width="900dp"
            android:layout_height="500dp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popupbackground"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAlarmicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/imgerror" />

            <TextView
                android:id="@+id/tvAmp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/noto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="비상 정지"
                android:textColor="#ff6666"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/noto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textColor="#222222"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_med"
                android:gravity="center"
                android:text="해제하시려면 비상정지 버튼을\n오른쪽으로 돌려주세요."
                android:textColor="#ffffff"
                android:textSize="35sp" />
        </LinearLayout>

    </RelativeLayout>
</android.widget.RelativeLayout>